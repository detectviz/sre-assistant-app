{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/main/docs/sources/developers/plugins/plugin.schema.json",
  "type": "app",
  "name": "Assistant",
  "id": "sre-assistant-app",
  "backend": true,
  "executable": "gpx_assistant",
  "info": {
    "keywords": ["app"],
    "description": "",
    "author": {
      "name": "Sre"
    },
    "logos": {
      "small": "img/logo.svg",
      "large": "img/logo.svg"
    },
    "screenshots": [],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  },
  "includes": [
    {
      "type": "page",
      "name": "Home",
      "path": "/a/%PLUGIN_ID%/home",
      "addToNav": true,
      "defaultNav": true
    },
    {
      "type": "page",
      "name": "即時指標查詢",
      "path": "/a/%PLUGIN_ID%/real-time-metrics",
      "addToNav": true,
      "defaultNav": false
    },
    {
      "type": "page",
      "name": "日誌分析",
      "path": "/a/%PLUGIN_ID%/log-analysis",
      "addToNav": true,
      "defaultNav": false
    },
    {
      "type": "page",
      "name": "告警管理",
      "path": "/a/%PLUGIN_ID%/alert-management",
      "addToNav": true,
      "defaultNav": false
    },
    {
      "type": "page",
      "name": "Grafana MCP Tools",
      "path": "/a/%PLUGIN_ID%/grafana-mcp-tools",
      "addToNav": true,
      "defaultNav": false
    },
    {
      "type": "page",
      "name": "Page with tabs",
      "path": "/a/%PLUGIN_ID%/page-with-tabs",
      "addToNav": true,
      "defaultNav": false
    },
    {
      "type": "page",
      "name": "Page with drilldown",
      "path": "/a/%PLUGIN_ID%/page-with-drilldown",
      "addToNav": true,
      "defaultNav": false
    },
    {
      "type": "page",
      "name": "Hello world",
      "path": "/a/%PLUGIN_ID%/hello-world",
      "addToNav": true,
      "defaultNav": false
    }
  ],
  "dependencies": {
    "grafanaDependency": ">=11.2.0",
    "plugins": []
  },
  "iam": {
    "permissions": [
      {
        "action": "orgs:read"
      },
      {
        "action": "teams:read",
        "scope": "teams:*"
      },
      {
        "action": "users:read",
        "scope": "global.users:*"
      },
      {
        "action": "datasources:read",
        "scope": "datasources:*"
      },
      {
        "action": "datasources:query",
        "scope": "datasources:*"
      },
      {
        "action": "dashboards:read",
        "scope": "dashboards:*"
      },
      {
        "action": "dashboards:create",
        "scope": "dashboards:*"
      },
      {
        "action": "dashboards:write",
        "scope": "dashboards:*"
      },
      {
        "action": "folders:read",
        "scope": "folders:*"
      },
      {
        "action": "alert.rules:read",
        "scope": "folders:*"
      },
      {
        "action": "alert.notifications:read"
      },
      {
        "action": "alert.instances:read",
        "scope": "folders:*"
      },
      {
        "action": "grafana-oncall-app.schedules:read"
      },
      {
        "action": "grafana-oncall-app.user-settings:read"
      },
      {
        "action": "grafana-oncall-app.alert-groups:read"
      },
      {
        "action": "plugins.app:access",
        "scope": "plugins:grafana-llm-app"
      },
      {
        "action": "plugins.app:access",
        "scope": "plugins:grafana-incident-app"
      },
      {
        "action": "plugins.app:access",
        "scope": "plugins:grafana-irm-app"
      }
    ]
  }
}
